<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>WTC | 聯絡我們</title>
    <!-- 連結css檔 -->
    <link rel="stylesheet" href="css/include.css" />
    <link rel="stylesheet" href="css/connect.css" />

</head>

<body>
    <div class="container">
        <!--header navbar------>
        <%- include('include/header'); %>
        <!--header navbar-end-->
        <div class="content">
            <div class="brands">
                <div class="brand">
                    <h2>與我們聯繫</h2>
                </div>
                <hr size="2px" width="99.84%" color="#FF0000">

                <div class="desc">
                    <p style="font-size: 16pt; margin-bottom: 0;">留下您的聯絡方式，由專員與您聯繫</p>
                </div>
            </div>

            <form method="post" action="/connect">
                <div class="form-group">
                    <div class="label-text">
                        <label for="name">姓名 :</label>
                    </div>
                    <div class="label-input">
                        <input type="text" required="required" id="name" name="name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="label-text">
                        <label for="phone">聯絡電話 :</label>
                    </div>
                    <div class="label-input">
                        <input type="text" required="required" id="phone" name="phone">
                    </div>
                </div>
                <div class="form-group">
                    <div class="label-text">
                        <label for="email">email :</label>
                    </div>
                    <div class="label-input">
                        <input type="text" required="required" id="email" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="label-text">
                        <label for="question">留言或備註 :</label>
                    </div>
                    <div class="label-input">
                        <textarea id="question" required="required" name="question"></textarea>
                    </div>
                </div>
                <script language="javascript">
                    function questionSubmit() {
                        alert("送出成功 我們會盡快與您聯絡");
                    }
                </script>
                <div class="form-group">
                    <button type="submit" class="button">
                        送出
                    </button>
                </div>
            </form>

            <div class="clear"></div>
        </div>
        <%- include('include/footer'); %>
    </div>
</body>

</html>